<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.xmlcrm.app.hibernate.beans.basic.Configuration"
        table="configuration"
    >

        <id
            name="configuration_id"
            column="configuration_id"
            type="java.lang.Long"
        >
            <generator class="increment">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Configuration.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="comment"
        />

        <property
            name="conf_key"
            type="string"
            update="true"
            insert="true"
            column="conf_key"
        />

        <property
            name="conf_value"
            type="string"
            update="true"
            insert="true"
            column="conf_value"
        />

        <property
            name="starttime"
            type="java.util.Date"
            update="true"
            insert="true"
            column="starttime"
        />

        <property
            name="updatetime"
            type="java.util.Date"
            update="true"
            insert="true"
            column="updatetime"
        />

        <property
            name="deleted"
            type="string"
            update="true"
            insert="true"
            column="deleted"
        />

        <property
            name="user_id"
            type="long"
            update="true"
            insert="true"
            column="user_id"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Configuration.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
