<?xml version="1.0" encoding="UTF-8" ?>
<library>

<!-- ###################
	Class librarytab
 -->
<class name="librarytab" extends="basedokeoscharttab" >

	<view resource="reload_rsc" x="${ parent.width -24 }" >
		<handler name="onclick">
			this.parent.oninit.sendEvent();
		</handler>
		<tooltip text="Refresh list" />
	</view>		
    <view x="2" y="2" height="56" layout="axis:y;spacing:2">
    	<text fontsize="11" text="Add files to the list:" />
        <button fontsize="11" text="upload" width="140" height="18">
            <handler name="onclick">
                new uploadwindow(canvas.main_content._content,{x:60,y:60,uploadmodule:canvas.uploadmoduleppt,isOnlyPpt:true});
            </handler>
        </button>
        <text fontsize="11" text="Availible PPT's:" />
    </view>
    
    <handler name="oninit">
    	//rtc.getFiles.call();
    	canvas.mainservices.getListOfPptFiles.invoke();
    </handler>
    
	<pptlist name="_pptlist" x="4" y="60" height="${ parent.height-70 }"
		uploadmodul="$once{ canvas.uploadmoduleppt }" width="230" id="_pptlist">
	   	
    </pptlist>
</class>

</library>