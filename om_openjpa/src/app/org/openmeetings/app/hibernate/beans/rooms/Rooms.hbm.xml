<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="rooms" lazy="false" name="org.openmeetings.app.hibernate.beans.rooms.Rooms">
    <id column="rooms_id" name="rooms_id">
      <generator class="increment"/>
    </id>
    <property name="comment" type="text" column="comment_field"/>
    <property name="name" type="string" column="name"/>
    <many-to-one outer-join="true" not-null="false" column="roomtypes_id" lazy="false" cascade="none" name="roomtype" class="org.openmeetings.app.hibernate.beans.rooms.RoomTypes"/>
    <property name="starttime" type="java.util.Date" column="starttime"/>
    <property name="updatetime" type="java.util.Date" column="updatetime"/>
    <property name="deleted" type="string" column="deleted"/>
    <property name="ispublic" type="boolean" column="ispublic"/>
    <property name="numberOfPartizipants" type="long" column="numberOfPartizipants"/>
    <property name="appointment" type="boolean" column="appointMent"/>
    <property name="isDemoRoom" type="boolean" column="isdemoroom"/>
    <property name="demoTime" type="integer" column="demo_time"/>
    <property name="isModeratedRoom" type="boolean" column="ismoderatedroom"/>
    <property name="externalRoomId" type="long" column="externalRoomId"/>
    <property name="externalRoomType" type="string" column="externalRoomType"/>
    <property name="allowUserQuestions" type="boolean" column="allow_user_questions"/>
    <property name="sipNumber" type="string" column="sip_number"/>
    <property name="conferencePin" type="string" column="conference_pin"/>
    <property name="isAudioOnly" type="boolean" column="is_audio_only"/>
    <property name="isClosed" type="boolean" column="is_closed"/>
    <property name="redirectURL" type="string" column="redirect_url"/>
    <property name="ownerId" type="long" column="owner_id"/>
    <property name="waitForRecording" type="boolean" column="wait_for_recording"/>
    <property name="allowRecording" type="boolean" column="allow_recording"/>
    <property name="hideTopBar" type="boolean" column="hide_top_bar"/>
  </class>
</hibernate-mapping>
