<?xml version='1.0' encoding='utf-8'?>
<Context docBase="../../lps-latest" path="/lps-latest">
  <Logger className="org.apache.catalina.logger.FileLogger"
             prefix="admanDB_log." suffix=".txt"
             timestamp="true"/>

  <Resource name="jdbc/admanDB"
               auth="Container"
               type="com.mchange.v2.c3p0.ComboPooledDataSource"/>

  <ResourceParams name="jdbc/admanDB">
    <parameter>
      <name>factory</name>
      <value>org.apache.naming.factory.BeanFactory</value>
    </parameter>

    <parameter>
       <name>driverClass</name>
       <value>org.postgresql.Driver</value>
    </parameter>
    
    <!-- The JDBC connection url  -->
    <parameter>
      <name>jdbcUrl</name>
      <value>jdbc:postgresql://localhost/adman</value>
    </parameter>

    <!-- DB username and password for dB connections  -->
    <parameter>
     <name>user</name>
     <value>postgres</value>
    </parameter>
    <parameter>
     <name>password</name>
     <value>oskar1507</value>
    </parameter>

	<!-- c3p0 specific paramter -->
	<parameter>  
		<name>minPoolSize</name>  
		<value>5</value>  
	</parameter>  

	<parameter>  
		<name>maxPoolSize</name>  
		<value>25</value>  
	</parameter>  

	<parameter>  
		<name>acquireIncrement</name>  
		<value>5</value>  
	</parameter>

  </ResourceParams>

</Context>
