<!-- letter -->
<class name="drawLetterTools" extends="view" x="340" layout="axis:x;spacing:2">	
    <drawcolorpicker y="42" defaultno="1" >
        <handler name="onnewcolor" args="c">
            this.parent.parent.parent._drawareaMask._drawarea.setAttribute('currentlayerletter',c);
        </handler>
    </drawcolorpicker> 
    <basechooseseicon resourceN="italic" y="42" labelid="86" >
        <handler name="onclick">
            this.parent.parent.parent._drawareaMask._drawarea.setAttribute('italic',!this.parent.parent._drawareaMask._drawarea.getAttribute('italic'));
        </handler>
    </basechooseseicon>
    <basechooseseicon resourceN="bold" y="42" labelid="87" >
        <handler name="onclick">
            this.parent.parent.parent._drawareaMask._drawarea.setAttribute('bold',!this.parent.parent._drawareaMask._drawarea.getAttribute('bold'));
        </handler>
    </basechooseseicon>    
    <combobox width="60" y="42" editable="false" >
        <handler name="oninit">
            this.addItem('4','4');
            this.addItem('6','6');
            this.addItem('8','8');
            this.addItem('10','10');
            this.addItem('15','15');
            this.addItem('20','20');
            this.addItem('25','25');
            this.addItem('30','30');
            this.addItem('40','40');
            this.addItem('60','60');
            this.addItem('80','80');
            this.selectItem('10');
        </handler>
        <handler name="onselect" args="val">
            this.parent.parent.parent._drawareaMask._drawarea.setAttribute('currentlayersize',Number(this.getValue()));
        </handler>
    </combobox>	    
</class>

