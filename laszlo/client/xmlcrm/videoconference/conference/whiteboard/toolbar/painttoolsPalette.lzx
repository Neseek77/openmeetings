<?xml version="1.0" encoding="UTF-8" ?>
<library>
	
<!-- Line -->	
<class name="drawLineTools" extends="view" x="340" layout="axis:x;spacing:2">
    <drawcolorpicker y="42" defaultno="44" >
		<handler name="onnewcolor" args="c">
            this.parent.parent.parent._drawareaMask._drawarea.currentlinestroke = c;
        </handler>
    </drawcolorpicker>
    <drawchoosesizeradio y="46">
        <handler name="onselect" args="val">
            if (val.value=='1') this.parent.parent.parent._drawareaMask._drawarea.currentlinelineWidth=1;
            if (val.value=='2') this.parent.parent.parent._drawareaMask._drawarea.currentlinelineWidth=5;
            if (val.value=='3') this.parent.parent.parent._drawareaMask._drawarea.currentlinelineWidth=10;
        </handler>
    </drawchoosesizeradio>
</class>

