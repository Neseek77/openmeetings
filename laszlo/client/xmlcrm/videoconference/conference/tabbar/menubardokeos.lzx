<!-- ###################
	Class menubardokeos
	
	Provides a Tabbar
 -->

<class name="menubardokeos" extends="view" >
	
	<innerdokeoslist name="_contentlist" x="2" />
	
	<!-- Content area for Tab -->
	<view name="_tabscontent" y="20" >
		<method name="clearContent">
			<![CDATA[
				if (this.subviews.length>0){
					Debug.write("this.subviews.length: ",this.subviews.length,this.subviews);
					this._contenttab.destroy();
					Debug.write("this.subviews.length: ",this.subviews.length,this.subviews);
				}
			]]>
		</method>
	</view>
	
</class>

<class name="innerdokeoslist" extends="view" >
	<simplelayout name="_innerlayout" axis="x" spacing="2" />
	
	<!-- Holds a reference to the currently selected TabButton -->
	<attribute name="selected" value="null" />
	
	<method name="setSelection" args="selected">
		this.selected = selected;
		this.selected.setAttribute('isselected',true);
		<![CDATA[
		for (var i=0;i<this.subviews.length;i++){
			if(this.subviews[i]!=selected){
				this.subviews[i].setAttribute('isselected',false);
				this.subviews[i].onmouseout.sendEvent();
			}
		}
		]]>
	</method>
	
	<charttabutton />
	<!-- 
	<librarytabutton />
	 -->
	<uploadtabutton />
	<participantstabutton />
	<!-- 
	<wwwtabutton />
	 -->

</class>

</library>