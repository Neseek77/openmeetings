<library>

<!-- Buttons -->
<class name="charttabutton" extends="basedokeostabbutton" width="84" iconresourcename="ksirc_rsc" 
	iconname="Chat" >
	<handler name="sendClick">
		Debug.write("onclick handler chat" );
		this.parent.parent._tabscontent.clearContent();
		new charttab(this.parent.parent._tabscontent,{name:'_contenttab'});
		canvas.tabisInited=1;
	</handler>
	<handler name="oninit">
		//this.parent.setSelection(this);
		this.onmouseup.sendEvent();
	</handler>
</class>

