<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="flvrecording" lazy="false" name="org.openmeetings.app.hibernate.beans.flvrecord.FlvRecording">
    <id column="flvrecording_id" name="flvRecordingId">
      <generator class="increment"/>
    </id>
    <property name="fileName" type="string" column="filename"/>
    <property name="comment" type="string" column="comment"/>
    <property name="fileHash" type="string" column="filehash"/>
    <property name="parentFileExplorerItemId" type="long" column="parent_fileexploreritem_id"/>
    <property name="room_id" type="long" column="room_id"/>
    <property name="ownerId" type="long" column="owner_id"/>
    <property name="isFolder" type="boolean" column="is_folder"/>
    <property name="isImage" type="boolean" column="is_image"/>
    <property name="isPresentation" type="boolean" column="is_presentation"/>
    <property name="isRecording" type="boolean" column="is_recording"/>
    <property name="insertedBy" type="long" column="inserted_by"/>
    <property name="inserted" type="java.util.Date" column="inserted"/>
    <property name="deleted" type="string" column="deleted"/>
    <property name="updated" type="java.util.Date" column="updated"/>
    <property name="fileSize" type="long" column="filesize"/>
    <property name="recordStart" type="java.util.Date" column="record_start"/>
    <property name="recordEnd" type="java.util.Date" column="record_end"/>
    <property name="recorderStreamId" type="string" column="recorder_stream_id"/>
    <property name="organization_id" type="long" column="organization_id"/>
  </class>
</hibernate-mapping>
