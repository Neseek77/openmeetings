<?xml version="1.0" encoding="UTF-8" ?>
<library>
<!--  -->

<class name="imagesListdraw" extends="view" width="294" height="270" bgcolor="$once{ canvas.basebgcolorizer }">
	<view width="${ parent.width-2 }" height="${ parent.height-2 }" x="1" y="1" bgcolor="white" />

	<attribute name="uploadmodul" value="" type="string" />

    <method name="addFolder" args="foldername">
        //new listFolderDrag(this._table._listcontent,{uploadmodul:this.uploadmodul,foldername:foldername});
        new listFolderDrag(this._table._listcontent,{uploadmodul:this.uploadmodul,foldername:foldername});
    </method>
    
    <method name="addFile" args="filename,ext">
        //new listImageDrag(this._table._listcontent,{uploadmodul:this.uploadmodul,size:size,filename:filename,inserted:inserted,isimage:isimage});
        new listImageDrag(this._table._listcontent,{uploadmodul:this.uploadmodul,filename:filename+ext,filenamePure:filename,ext:ext});
    </method>
    
    <method name="addWML" args="filename,ext">
        //new listImageDrag(this._table._listcontent,{uploadmodul:this.uploadmodul,size:size,filename:filename,inserted:inserted,isimage:isimage});
        new listWml(this._table._listcontent,{uploadmodul:this.uploadmodul,filename:filename+ext,filenamePure:filename,ext:ext});
    </method>
    
    <method name="addPresentationThumb" args="thumbName,no">
        new listPresentationThumb(this._table._listcontent,{uploadmodul:this.uploadmodul,thumbname:thumbName,no:no});
    </method>
    
    <method name="addListpresentationFileOrig" args="originalName,pdfname,swfName">
        new listPresentationFileOrig(this._table._listcontent,{isoriginal:true,uploadmodul:this.uploadmodul,originalName:originalName,pdfname:pdfname,swfName:swfName});
    </method>
    
    <method name="addListpresentationFilePDF" args="pdfname,swfName">
        new listPresentationFilePDF(this._table._listcontent,{isoriginal:true,uploadmodul:this.uploadmodul,pdfname:pdfname,swfName:swfName});
    </method>
	    
    <method name="resetList">
    	this._table.destroy();
    	new imageListInnerTable(this,{name:'_table'});
    </method>
    
    <method name="highlightItem" args="obj">
    	<![CDATA[
    		for (var i=0;i<this._table._listcontent.subviews.length;i++){
    			if (!this._table._listcontent.subviews[i].isPpt){
                    //Debug.write("this._table._listcontent.subviews[i]: ",this._table._listcontent.subviews[i]);
    				this._table._listcontent.subviews[i]._thumbText.setText('<font>'+this._table._listcontent.subviews[i].filenamePure+'</font>');
                }
    		}
    		obj._thumbText.setText('<font><b>'+obj.filenamePure+'</b></font>');
    	]]>
    </method>
    
	<imageListInnerTable name="_table" />

</class>

</library>
